{
  "name": "send-to-webhook",
  "version": "2.0.0",
  "description": "Send link, image or selected text to webhooks by filters",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "BROWSER=chrome vite build",
    "build:firefox": "BROWSER=firefox vite build",
    "zip:chrome": "cd dist-chrome && zip -r ../extension-chrome.zip .",
    "zip:firefox": "cd dist-firefox && zip -r ../extension-firefox.zip .",
    "package": "npm run build && npm run zip:chrome && npm run zip:firefox"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ejfn/send-to-webhook.git"
  },
