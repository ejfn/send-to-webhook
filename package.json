  },
  "homepage": "https://github.com/ejfn/send-to-webhook#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^22.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0"
  }
}