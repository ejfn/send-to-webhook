{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["dom", "es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/scripts",
    "rootDir": "./src",
    "moduleResolution": "bundler",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}